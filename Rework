  <script>
    // Utility function to hide all pages and show one specified page ID.
    function showPage(pageID) {
      const pages = document.querySelectorAll('.page');
      pages.forEach(page => page.classList.remove('active'));
      document.getElementById(pageID).classList.add('active');
      
      // Optional: Clear any form messages if needed
    }

    // Simulate login â€“ in a real application, validate credentials.
    function login(event) {
      event.preventDefault();
      // For this prototype, simply go to the dashboard.
      showPage('page-dashboard');
    }

    // Navigation functions for dashboard links.
    function goToDashboard() { showPage('page-dashboard'); }
    function goToCatalog()     { showPage('page-catalog'); }
    function goToCart()        { showPage('page-cart'); }
    function goToPayment()     { showPage('page-payment'); }
    function goToOrderTrack()  { showPage('page-ordertracking'); }
    function logout()          { showPage('page-login'); }

    // Dummy functions for adding to cart and tracking orders.
    function addToCart(productId) {
      alert('Product ' + productId + ' added to cart!');
    }
    
    // Payment method show/hide
    function updatePaymentInfo() {
      var method = document.getElementById('payment-method').value;
      var cardDetails = document.getElementById('card-details');
      if (method === 'credit') {
        cardDetails.style.display = 'block';
      } else {
        cardDetails.style.display = 'none';
      }
    }
    
    window.addEventListener('DOMContentLoaded', function() {
      // On page load, show login page.
      showPage('page-login');
    });
  </script>
