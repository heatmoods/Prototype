  <script>
    // For demo purposes, a simple cart simulator
    let cart = [];

    function addToCart(productId) {
      // This simple demo adds productId to the cart array
      cart.push(productId);
      document.getElementById('cart-items').innerText = `Items in cart: ${cart.join(', ')}`;
      alert('Product added to cart!');
    }

    function goToCheckout() {
      window.location.href = "#checkout";
    }
    
    // Delivery selection example: Update delivery details based on chosen option
    document.getElementById('delivery-type').addEventListener('change', function(){
      const deliveryType = this.value;
      let details = "";
      switch(deliveryType) {
        case "in-store":
          details = "No delivery fee";
          break;
        case "grubhub":
          details = "$5.00, Approximately 45 minutes";
          break;
        case "doordash":
          details = "$4.50, Approximately 40 minutes";
          break;
        case "ubereats":
          details = "$5.50, Approximately 50 minutes";
          break;
        default:
          details = "";
      }
      document.getElementById('delivery-details').value = details;
    });
    
    // Payment section: Show/hide card details based on payment method selection
    document.getElementById('payment-method').addEventListener('change', function(){
      const method = this.value;
      const paymentInfo = document.getElementById('payment-info');
      if(method === "credit" || method === "paypal") {
        paymentInfo.style.display = "block";
      } else {
        paymentInfo.style.display = "none";
      }
    });
    
    // Initially hide payment info if cash is selected
    document.getElementById('payment-info').style.display = "none";

    // Form submit handling (dummy)
    document.getElementById('checkout-form').addEventListener('submit', function(e){
      e.preventDefault();
      alert("Order placed successfully! An invoice will be generated.");
    });
    
    document.getElementById('contact-form').addEventListener('submit', function(e){
      e.preventDefault();
      alert("Your message has been sent. Our customer service will contact you soon.");
    });
  </script>

